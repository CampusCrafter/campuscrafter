@page
@using CampusCrafter.Models
@model CampusCrafter.Areas.Data.Pages.Majors.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Major</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Major.Name" class="control-label"></label>
                <input asp-for="Major.Name" class="form-control" />
                <span asp-validation-for="Major.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Major.GraduationDegree" class="control-label"></label>
                <select asp-for="Major.GraduationDegree" class="form-control" asp-items="@Html.GetEnumSelectList<DegreeType>()"></select>
                <span asp-validation-for="Major.GraduationDegree" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Major.DepartmentId" class="control-label"></label>
                <select asp-for="Major.DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId"></select>
            </div>
            
            @* TODO: List courses to assign to this major, other majors (prerequisites / successors), specializations *@ 
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

